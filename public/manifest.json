{
  "manifest_version": 3,
  "name": "Image Controls",
  "permissions": ["storage"],
  "version": "0.0.1",
  "description": "Custom controls for standalone image tabs",
  "content_scripts": [
    {
      "matches": [
        "*://*/*.png",
        "*://*/*.PNG",
        "*://*/*.jpg",
        "*://*/*.JPG",
        "*://*/*.jpeg",
        "*://*/*.JPEG",
        "*://*/*.webp",
        "*://*/*.WEBP",
        "*://*/*.gif",
        "*://*/*.GIF",
        "*://*/*.bmp",
        "*://*/*.BMP",
        "*://*/*.avif",
        "*://*/*.AVIF",
        "file://*/*.png",
        "file://*/*.PNG",
        "file://*/*.jpg",
        "file://*/*.JPG",
        "file://*/*.jpeg",
        "file://*/*.JPEG",
        "file://*/*.webp",
        "file://*/*.WEBP",
        "file://*/*.gif",
        "file://*/*.GIF",
        "file://*/*.bmp",
        "file://*/*.BMP",
        "file://*/*.avif",
        "file://*/*.AVIF"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["*://*/*"]
}
